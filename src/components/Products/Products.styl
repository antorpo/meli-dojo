@import url('https://fonts.googleapis.com/css?family=Open+Sans:300,400&display=swap')

.Products
  &-recommended
    h2
      display: flex
  &-items
    grid-template-columns repeat(3, 2fr)
    grid-gap 1.5rem
    grid-row-ga 1.5em
    display grid
  &-item
    text-decoration none
    box-shadow 8px 14px 38px rgba(39,44,49,.06), 1px 3px 8px rgba(39,44,49,.03)
    border-radiu 5px
    margin 0 0 20px 0
    position relative
    &-info
      padding 10px
      h2
        font-size 15px
        font-weight bold
        display flex
        justify-content space-between
        span
          color #39b54a
          i
            padding: 10px 10px 10px 10px 
      p
        font-size 14px
        font-weight 300
        font-family: 'Open Sans', sans-serif
        position: relative
        bottom: 0
        span
          color  #3483fa;
          font-weight 500
    img
      width 90%
      height 100px
      border-radius 5px 5px 0 0
      object-fit contain
      
    button
      position: absolute
      bottom: 0;
      width 100%
      border-radius 0px 0px 5px 5px
      border 0px
      outline 0
      cursor pointer
      font-family: 'Open Sans', sans-serif
      font-size 16px
      font-weight 400
      background-color: rgba(65,137,230,.15); 
      color: #3483fa
      &:hover
        background-color #3483fa;
        color white
  &-paginator
    display: flex
    justify-content center
    align-items: center
    button
      background-color: #fff;
      border: none;
      i
        cursor: pointer;
        position: center ;
        top: 0;
        bottom: 30%;
        left: 0;
        padding: 10px 10px 10px 10px;
        color:  #3483fa;
        font-size: 20px
    h4
      margin: 2%



